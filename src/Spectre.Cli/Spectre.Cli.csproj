    </PackageReference>
    <PackageReference Update="StyleCop.Analyzers" Version="1.2.0-beta.164" />
    <PackageReference Update="TunnelVisionLabs.ReferenceAssemblyAnnotator" Version="1.0.0-alpha.154" />
  </ItemGroup>

</Project>