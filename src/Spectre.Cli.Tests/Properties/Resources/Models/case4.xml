<?xml version="1.0" encoding="utf-16"?>
<model>
  <!--ANIMAL-->
  <command name="animal" isbranch="true" settings="Spectre.Cli.Testing.Data.Settings.AnimalSettings">
    <parameters>
      <argument name="LEGS" position="0" required="false" kind="scalar" type="System.Int32">
        <description>The number of legs.</description>
        <validators>
          <validator type="Spectre.Cli.Testing.Data.Validators.EvenNumberValidatorAttribute" message="Animals must have an even number of legs." />
          <validator type="Spectre.Cli.Testing.Data.Validators.PositiveNumberValidatorAttribute" message="Number of legs must be greater than 0." />
        </validators>
      </argument>
      <option short="a" long="alive,not-dead" value="NULL" required="false" kind="flag" type="System.Boolean">
        <description>Indicates whether or not the animal is alive.</description>
      </option>
    </parameters>
    <!--DOG-->
    <command name="dog" isbranch="false" type="Spectre.Cli.Testing.Data.Commands.DogCommand" settings="Spectre.Cli.Testing.Data.Settings.DogSettings">
      <parameters>
        <argument name="AGE" position="0" required="true" kind="scalar" type="System.Int32" />
        <option short="g" long="good-boy" value="NULL" required="false" kind="flag" type="System.Boolean" />
        <option short="n,p" long="name,pet-name" value="VALUE" required="false" kind="scalar" type="System.String" />
      </parameters>
    </command>
  </command>
</model>